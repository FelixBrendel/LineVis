{
    "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
    "name": "linevis",
    "version": "0.1.0",
    "dependencies": [
        "boost-core",
        "boost-algorithm",
        "boost-filesystem",
        {
            "name": "boost-interprocess",
            "platform": "windows"
        },
        {
            "name": "sdl2",
            "features": [ "vulkan", "x11", "wayland" ]
        },
        "sdl2-image",
        "tinyxml2",
        {
            "name": "libarchive",
            "default-features": true,
            "features": [ "bzip2", "lz4", "lzma", "zstd" ]
        },
        "vulkan-headers",
        "shaderc",
        "opencl",
        "glm",
        "eigen3",
        "jsoncpp",
        "python3",
        "cppzmq",
        "netcdf-c",
        "openexr"
    ]
}
